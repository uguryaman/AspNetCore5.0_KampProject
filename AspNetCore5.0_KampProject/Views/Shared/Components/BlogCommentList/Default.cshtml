@model IEnumerable<EntityLayer.Concreate.Comment>

@if (Model.Count() == 0)
{
    <b style="color:#053997">Bu blog hakkında yapışlmış henüz yorum yok. İlk yorumu yapmak ister misiniz?</b>

}
else
{
    <div class="comment-top">
        <h4>Yorumlar</h4>
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/Temalar/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUsername</h5>
                    <p>
                        @item.CommentContent
                    </p>


                </div>
            </div>
        }

    </div>
}

